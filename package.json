{
  "name": "energy-tracker-app",
  "version": "1.0.0",
  "description": "Energy tracker will display and show meaningful data about all kind of energies in the US",
  "main": "index.js",
  "repository": "https://github.com/GustavoSilvaNavarro/Energy-Tracker",
  "author": "Gustavo Silva <gustavo.silva.nav@gmail.com>",
  "license": "MIT",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "install": "cd ./backend && yarn && cd ../frontend && yarn",
    "frontend:format-check": "cd ./frontend && npm run format:client",
    "lint:frontend": "cd ./frontend && npm run lint:client",
    "start:frontend": "cd ./frontend && npm start",
    "backend:format-check": "cd ./backend && npm run format-check:prettier",
    "lint:backend": "cd ./backend && npm run lint",
    "start:backend-dev": "cd ./backend && npm run start:dev",
    "build:backend": "cd ./backend && npm run build",
    "clean:backend": "cd backend && npm run clean",
    "prepare:prod": "cd backend && npm run start:production",
    "prepare": "husky install"
  },
  "devDependencies": {
    "cz-conventional-changelog": "3.3.0",
    "husky": "^8.0.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
