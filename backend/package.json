{
  "name": "api-energy-tracker",
  "version": "1.0.0",
  "description": "Server for energy tracker app",
  "main": "dist/app.js",
  "repository": "https://github.com/GustavoSilvaNavarro/Energy-Tracker/tree/main/backend",
  "author": "Gustavo Silva <gustavo.silva.nav@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "node .",
    "prestart": "npm run build:webpack",
    "format-check:prettier": "prettier --check \"src/**/*.{js,jsx,ts,tsx}\"",
    "lint": "eslint \"src/**/*.{js,jsx,ts,tsx}\" --quiet",
    "start:pm2": "pm2 start . --watch",
    "start:dev": "nodemon src/app.ts --exec ts-node",
    "build": "tsc",
    "build:webpack": "webpack",
    "start:production": "npm run build:webpack && node .",
    "clean": "rmdir /s /q dist",
    "test": "jest --runInBand",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "keywords": [
    "Typescript",
    "Express",
    "SQL",
    "REST API",
    "SEQUELIZE",
    "POSTGRES",
    "SWAGGER"
  ],
  "dependencies": {
    "axios": "^1.2.1",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "mysql2": "^2.3.3",
    "pg": "^8.8.0",
    "pg-hstore": "^2.3.4",
    "pm2": "^5.2.2",
    "sequelize": "^6.27.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.14",
    "@types/morgan": "^1.9.3",
    "@types/node": "^18.11.13",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^5.46.1",
    "@typescript-eslint/parser": "^5.46.1",
    "eslint": "^8.29.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.20",
    "nodemon-webpack-plugin": "^4.8.1",
    "prettier": "^2.8.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^4.6.0",
    "ts-loader": "^9.4.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1",
    "webpack-node-externals": "^3.0.0"
  }
